<h1>Task一覧</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>メッセージ</th>
    </tr>
  </thead>
<tbody>
<% @tasks.each do |task| %>

<tr>
  <td><%= link_to task.id, task %></td>
  <td><%= task.status %></td>
  <td><%= task.content %></td>
</tr>
  
  
<% end %>

</tbody>
</table>
  <div>
    <%= paginate @tasks %>
  </div>
<%= link_to '新規Taskの投稿', new_task_path, {class: "btn btn-primary"} %>