<%= form_for(task) do |f| %>

<% if task.errors.any? %>

    <div id="error_explanation">
      <ul>
        
<% task.errors.full_messages.each do |task| %>

          <li>
<%= task %>
</li>
        
<% end %>

      </ul>
    </div>
  
<% end %>

<div class="form-group">
<%= f.label :status, 'ステータス' %>
<%= f.text_field :status , {class: "form-control col-lg-offset-3"}%>
<div class="col-lg-3"></div>
</div>

<div class="form-group">
<%= f.label :content, 'メッセージ'%>
<%= f.text_field :content, {class: "form-control"} %>
</div>

<br>  
<%= f.submit '投稿' , { class: "btn btn-primary float" }%>

<% end %>