<% if logged_in? %>
  <h1>トップページ：Task一覧</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>ステータス</th>
      <th>メッセージ</th>
    </tr>
  </thead>
<tbody>
<% @tasks.each do |task| %>

<tr>
  <td><%= link_to task.id, task %></td>
  <td><%= task.status %></td>
  <td><%= task.content %></td>
</tr>
  
  
<% end %>

</tbody>
</table>
  <div>
    <%= paginate @tasks %>
  </div>
<% else %>
<div class="jumbotron center">
  <div class="text-center">
    <h1>Welcome to Tasklist!</h1>
    <%= link_to 'サインアップ', signup_path, class: 'btn btn-lg btn-primary' %>
    <%= link_to 'ログイン', login_path, class: 'btn btn-lg btn-default' %>
  </div>
</div>
<% end %>